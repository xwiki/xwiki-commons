<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.commons</groupId>
    <artifactId>xwiki-commons-tool-spoon</artifactId>
    <version>15.0-SNAPSHOT</version>
  </parent>
  <artifactId>xwiki-commons-tool-spoon-tests</artifactId>
  <name>XWiki Commons - Tools - Spoon - Tests</name>
  <packaging>jar</packaging>
  <properties>
    <xwiki.enforcer.enforce-jcl-log4j-isolation.skip>true</xwiki.enforcer.enforce-jcl-log4j-isolation.skip>
  </properties>
  <dependencies>
    <!-- Test Dependencies -->
    <dependency>
      <groupId>fr.inria.gforge.spoon</groupId>
      <artifactId>spoon-core</artifactId>
      <version>${spoon.version}</version>
      <scope>test</scope>
      <!-- TODO: Remove when https://github.com/INRIA/spoon/issues/4248 is fixed -->
      <exclusions>
        <exclusion>
          <groupId>org.apache.maven</groupId>
          <artifactId>maven-model</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-tool-spoon-checks</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-tool-test-simple</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.xwiki.commons</groupId>
      <artifactId>xwiki-commons-component-api</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
